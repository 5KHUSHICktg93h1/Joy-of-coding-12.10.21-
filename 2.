# Joy-of-coding-12.10.21-
#include<stdio.h> 
int main()
{
int a[20],i,n,p;
printf("Enter number of elements of array:\n");
scanf("%d",&n);
printf("Enter elements of array:\n");
for(i=0;i<n;i++)
scanf("%d",&a[i]);
printf("Enter position of number you want to delete:\n"); 
scanf("%d",&p);
for(i=p;i<n;i++)
a[i]=a[i+1];
printf("The array:\n"); for(i=0;i<n-1;i++) 
printf("%d ",a[i]);
return 0;
}
