# Joy-of-coding-12.10.21-
#include<stdio.h> int main()
{
int a[20],i,n,p,num;
printf("Enter number of elements of array:\n"); 
scanf("%d",&n);
printf("Enter elements of array:\n");
for(i=0;i<n;i++)
scanf("%d",&a[i]);
printf("Enter position where you want to insert number:\n"); 
scanf("%d",&p);
printf("Enter the number to be inserted:\n"); scanf("%d",&num);
for(i=n-1;i>=p;i--)
a[i+1]=a[i];
a[p]=num;
printf("The array:\n");
for(i=0;i<=n;i++)
printf("%d ",a[i]);
return 0;
}
